modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "openssl", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "POS Application"

[[workflows.workflow]]
name = "POS Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python app.py"]
